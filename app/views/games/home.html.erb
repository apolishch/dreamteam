<div class="flex-container">
  <div class="booyah-box home-div">
    <h1 class="text-center">Create New Game</h1>
    <h6 class="text-center">Create a game and invite a friend to join</h6>
    <%= image_tag "image1.jpg", class: "image-resize" %>
    <hr />
    <div class="button">
       <%= link_to "New Game", new_game_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="booyah-box home-div">
    <h1 class="text-center">Join a Game</h1>
    <h6 class="text-center">See a list of all games</h6>
    <%= image_tag "image2.jpg", class: "image-resize" %>
    <hr />
    <div class="button">
      <%= link_to "See All Games", games_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>